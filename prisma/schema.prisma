generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  CONTRIBUTOR
}

enum Lang {
  FA
  EN
}

enum Status {
  DRAFT
  REVIEWED
  SCHEDULED
  PUBLISHED
  REJECTED
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  role           Role      @default(CONTRIBUTOR)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  accounts       Account[]
  sessions       Session[]
  articles       Article[] @relation("AuthorArticles")
}

model Source {
  id        String   @id @default(cuid())
  name      String
  url       String
  feedUrl   String   @unique
  isTrusted Boolean  @default(true)
  active    Boolean  @default(true)
  blacklisted Boolean @default(false)
  notes     String?
  priority  Int      @default(10)
  lastFetchedAt DateTime?
  createdAt DateTime @default(now())
  articles  Article[]

  @@index([active, blacklisted])
}

model Article {
  id            String   @id @default(cuid())
  slug          String   @unique
  urlCanonical  String   @unique
  titleFa       String
  titleEn       String?
  excerptFa     String?
  excerptEn     String?
  contentFa     String?
  contentEn     String?
  coverImageUrl String?
  sourceId      String
  source        Source   @relation(fields: [sourceId], references: [id])
  status        Status   @default(REVIEWED)
  language      Lang     @default(EN)
  authorId      String?
  author        User?    @relation("AuthorArticles", fields: [authorId], references: [id])
  publishedAt   DateTime @default(now())
  scheduledFor  DateTime?
  scheduleJobId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  categories    CategoryOnArticle[]
  tags          TagOnArticle[]
  media         Media[]
  translations  TranslationCache[]
  analytics     ArticleAnalytics?
  viewFingerprints ArticleViewFingerprint[]
  topics        ArticleTopic[]

  @@index([status, scheduledFor])
}

model ArticleTopic {
  id         String   @id @default(cuid())
  articleId  String
  label      String
  score      Float
  source     String   @default("keyword")
  createdAt  DateTime @default(now())
  article    Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([label])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id                  String               @id @default(cuid())
  slug                String               @unique
  nameFa              String
  nameEn              String?
  descriptionFa       String?
  descriptionEn       String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  articles            CategoryOnArticle[]
}

model CategoryOnArticle {
  articleId  String
  categoryId String
  article    Article  @relation(fields: [articleId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([articleId, categoryId])
}

model Tag {
  id        String          @id @default(cuid())
  slug      String          @unique
  nameFa    String
  nameEn    String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  articles  TagOnArticle[]
}

model TagOnArticle {
  articleId String
  tagId     String
  article   Article @relation(fields: [articleId], references: [id])
  tag       Tag     @relation(fields: [tagId], references: [id])

  @@id([articleId, tagId])
}

model Media {
  id        String   @id @default(cuid())
  url       String
  width     Int?
  height    Int?
  altFa     String?
  altEn     String?
  articleId String?
  article   Article? @relation(fields: [articleId], references: [id])
  createdAt DateTime @default(now())
}

model TranslationCache {
  id           String   @id @default(cuid())
  hash         String   @unique
  sourceLang   Lang
  targetLang   Lang
  sourceText   String
  translated   String
  provider     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  articleId    String?
  article      Article? @relation(fields: [articleId], references: [id])
}

model ArticleAnalytics {
  id              String   @id @default(cuid())
  articleId       String   @unique
  totalViews      Int      @default(0)
  uniqueVisitors  Int      @default(0)
  totalReadTimeMs Int      @default(0)
  totalCompletion Float    @default(0)
  avgReadTimeMs   Int      @default(0)
  avgCompletion   Float    @default(0)
  lastViewedAt    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  article         Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([lastViewedAt])
}

model ArticleViewFingerprint {
  id          String   @id @default(cuid())
  articleId   String
  fingerprint String
  createdAt   DateTime @default(now())
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([articleId, fingerprint])
}

model CoreWebVital {
  id             String   @id @default(cuid())
  metric         String
  value          Float
  rating         String
  delta          Float?
  navigationType String?
  route          String
  createdAt      DateTime @default(now())

  @@index([route, metric])
  @@index([createdAt])
}

model TrendSnapshot {
  id          String        @id @default(cuid())
  windowStart DateTime
  windowEnd   DateTime
  generatedAt DateTime      @default(now())
  topics      TopicTrend[]

  @@index([generatedAt])
}

model TopicTrend {
  id           String        @id @default(cuid())
  snapshotId   String
  topic        String
  score        Float
  articleCount Int
  snapshot     TrendSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@index([topic])
}

enum ExperimentStatus {
  DRAFT
  RUNNING
  PAUSED
  COMPLETED
}

enum ExperimentTemplateType {
  ARTICLE
  NEWSLETTER
}

model Experiment {
  id          String                @id @default(cuid())
  key         String                @unique
  name        String
  description String?
  status      ExperimentStatus      @default(DRAFT)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  variants    ExperimentVariant[]
  assignments ExperimentAssignment[]
  metrics     ExperimentMetric[]
}

model ExperimentVariant {
  id            String                  @id @default(cuid())
  experimentId  String
  key           String
  label         String
  weight        Int                     @default(1)
  templateType  ExperimentTemplateType
  templatePath  String?
  createdAt     DateTime                @default(now())
  experiment    Experiment              @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  assignments   ExperimentAssignment[]
  metrics       ExperimentMetric[]

  @@unique([experimentId, key])
}

model ExperimentAssignment {
  id            String     @id @default(cuid())
  experimentId  String
  variantId     String
  visitorKey    String
  assignedAt    DateTime   @default(now())
  experiment    Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  variant       ExperimentVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([experimentId, visitorKey])
}

model ExperimentMetric {
  id           String     @id @default(cuid())
  experimentId String
  variantId    String
  metric       String
  value        Float
  recordedAt   DateTime   @default(now())
  experiment   Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  variant      ExperimentVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@index([experimentId, metric])
}

model PushSubscription {
  id             String   @id @default(cuid())
  endpoint       String   @unique
  p256dh         String
  auth           String
  createdAt      DateTime @default(now())
  lastNotifiedAt DateTime?
}
